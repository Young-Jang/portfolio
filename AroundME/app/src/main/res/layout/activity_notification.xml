<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                app:srcCompat="@drawable/sosologo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="9dp"
                android:src="@drawable/search"
                android:id="@+id/searchButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_black_bottom"
                android:text="알림창"
                android:textSize="17dp"
                android:layout_weight="1"
                android:id="@+id/checkalarm"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_gray_bottom"
                android:text="쪽지함"
                android:textSize="17dp"
                android:textColor="@color/colorGray"
                android:layout_weight="1"
                android:id="@+id/checkmail"
                />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_gray_top">

            <Button
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:drawableTop="@drawable/home"
                android:text="홈"
                android:drawablePadding="3dp"
                android:textColor="@color/colorGray"
                android:textSize="12dp"
                android:paddingTop="7dp"
                />

            <Button
                android:id="@+id/board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_gray_top"
                android:drawableTop="@drawable/board"
                android:text="게시판"
                android:textColor="@color/colorGray"
                android:textSize="12dp"
                android:paddingTop="7dp"
                />

            <Button
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:drawableTop="@drawable/map"
                android:text="지도"
                android:drawablePadding="3dp"
                android:textColor="@color/colorGray"
                android:textSize="12dp"
                android:paddingTop="7dp"
                />

            <Button
                android:id="@+id/alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_gray_top"
                android:drawableTop="@drawable/alarmselect"
                android:text="알람"
                android:textColor="@color/colorSoso"
                android:textSize="12dp"
                android:paddingTop="7dp"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/grayback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C64B4B4B"
        android:visibility="invisible"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="280dp"
        android:layout_marginRight="25dp"
        app:srcCompat="@drawable/camera"
        android:visibility="invisible"
        app:backgroundTint="#ffffff"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:fabCustomSize="60dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/fabtext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="300dp"
        android:layout_marginRight="100dp"
        android:text="사진촬영"
        android:textColor="@color/colorWhite"
        android:visibility="invisible"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="210dp"
        android:layout_marginRight="25dp"
        app:srcCompat="@drawable/emergency"
        android:visibility="invisible"
        app:backgroundTint="#ffffff"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:fabCustomSize="60dp"
        />

    <TextView
        android:id="@+id/fabtext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="230dp"
        android:layout_marginRight="100dp"
        android:text="제보하기"
        android:textColor="@color/colorWhite"
        android:visibility="invisible"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="140dp"
        android:layout_marginRight="25dp"
        app:srcCompat="@drawable/report"
        android:visibility="invisible"
        app:backgroundTint="#ffffff"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:fabCustomSize="60dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/fabtext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="160dp"
        android:layout_marginRight="100dp"
        android:text="글쓰기"
        android:textColor="@color/colorWhite"
        android:visibility="invisible"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="25dp"
        app:fabCustomSize="60dp"
        app:srcCompat="@drawable/pencil"
        app:backgroundTint="@color/colorSoso"
        tools:ignore="VectorDrawableCompat" />
</FrameLayout>