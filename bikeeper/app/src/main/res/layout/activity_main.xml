<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawerLayout"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MyBikeColor">
    <LinearLayout
        android:id="@+id/out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/MyBikeColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorWhite">

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dehaze"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text=" Bikeeper"
            android:textSize="25dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/MyBikeColor"
            android:textStyle="bold"
            android:background="@color/colorWhite"
            android:layout_weight="1"/>
            <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/squareborder2"
        android:gravity="center_horizontal"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/colorWhite"
            android:src="@drawable/ic_marker04" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자전거 현위치"
            android:textSize="25dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="clip_vertical"/>

        <TextView
            android:id="@+id/locaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울시 동작구 상도로 47길 105"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="clip_vertical"/>

    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/buttonback"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <ImageButton
                android:id="@+id/security"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_unlock_re"
                android:onClick="OnSecurityPopupClick"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="보 안"
                android:textSize="20dp"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/buttonback"
            android:orientation="vertical"
            android:layout_weight="1"
           >

            <ImageButton
                android:id="@+id/notice"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_message_re" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="알 람"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/buttonback"
            android:orientation="vertical"
            android:layout_weight="0.5"
            >

            <ImageButton
                android:id="@+id/save"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_store_re"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="보 관"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/buttonback"
            android:orientation="vertical"
            android:layout_weight="0.5"
            >

            <ImageButton
                android:id="@+id/returns"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_recev_re" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="수 령"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/squareborder2"
        android:gravity="center_horizontal"
        >

        <ImageButton
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_check_state"
            android:background="@color/colorWhite"/>

        <TextView
            android:id="@+id/stateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 자전거 상태확인"
            android:textSize="25dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/advertise_bike"
            android:background="@color/colorWhite"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    </LinearLayout>
    </ScrollView>
   <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_gravity="start">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/MyBikeColor"
            android:layout_gravity="center"
            android:gravity="center">
        <ImageView
            android:id="@+id/myinfo"
            android:layout_width="105dp"
            android:layout_height="110dp"
            android:padding="10dp"
            android:src="@drawable/ic_info"
            android:background="@color/MyBikeColor"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/colorMenu"
            android:gravity="center">
        <ImageView
            android:id="@+id/reservation"
            android:layout_width="105dp"
            android:layout_height="110dp"
            android:padding="10dp"
            android:src="@drawable/ic_insert"
            android:background="@drawable/side_menu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/colorMenu"
            android:layout_gravity="center"
            android:gravity="center">
        <ImageView
            android:id="@+id/inquiry"
            android:layout_width="105dp"
            android:layout_height="110dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_request_menu"
            android:background="@drawable/side_menu"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/colorMenu"
            android:layout_gravity="center"
            android:gravity="center">
        <ImageView
            android:id="@+id/setting"
            android:layout_width="105dp"
            android:layout_height="110dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_setting"
            android:background="@color/colorMenu"/>
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>