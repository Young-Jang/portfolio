<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackColor"
    tools:context=".TimeSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="@color/MyBikeColor">
        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backicon"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[보관 시간 설정]"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"

            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보관시작 시간"
        android:textSize="25dp"
        android:padding="13dp"
        android:background="@drawable/squareborder"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp">

        <Spinner
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:text="월"
            android:backgroundTint="@color/colorGray"
            android:background="@color/colorWhite"
            android:textSize="15dp"
            android:id="@+id/month"
            android:gravity="center"
            android:theme="@style/Spinner"
            android:spinnerMode="dropdown"
            android:overlapAnchor="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <Spinner
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="일"
            android:gravity="center"
            android:backgroundTint="@color/colorGray"
            android:background="@color/colorWhite"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_weight="1"
            android:id="@+id/date"
            android:theme="@style/Spinner"
            android:spinnerMode="dropdown"
            android:overlapAnchor="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <Spinner
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="시"
            android:gravity="center"
            android:backgroundTint="@color/colorGray"
            android:background="@color/colorWhite"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_weight="1"
            android:id="@+id/time"
            android:theme="@style/Spinner2"
            android:spinnerMode="dropdown"
            android:overlapAnchor="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예상보관 시간"
        android:textSize="25dp"
        android:padding="13dp"
        android:background="@drawable/squareborder"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="2시간"
            android:textSize="25dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="4시간"
            android:textSize="25dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="6시간이상"
            android:textSize="25dp"/>

    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/okay"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/MyBikeColor"
            android:text="확  인"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="6"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    </LinearLayout>
</LinearLayout>